<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro"/>
    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1" />
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1" />
    </material>

    <material name="black">
        <color rgba="0 0 0 1" />
    </material>

    <!-- base link -->

    <link name="base_link">

    </link>
    <!-- chasis link -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.02 0 0"/><!-- desfase de eje de rueda y origen-->
    </joint>
    
    <link name="chassis">
        <visual>
            <origin xyz="0.115 0 0.025"/> <!-- ubicacion dentro de la caja-->
                <geometry>
                    <box size="0.23 0.19 0.02"/>
                </geometry>
                <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.115 0 0.025"/>
                <geometry>
                    <box size="0.23 0.19 0.01"/>
                </geometry>
                
        </collision>
        <xacro:inertial_box mass="1.355" x="0.23" y="0.19" z="0.01">
            <origin xyz="0.115 0 0.025" rpy="0 0 0"/>
        </xacro:inertial_box>     

    </link>
    <gazebo reference="chassis">
        <material>Gazebo/White</material>
    </gazebo>
    <!-- LEFT WHEEL LINK -->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 -0.11 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.03325" length="0.0266"/>
            </geometry>       <!-- 0.001 -->
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03325" length="0.0266"/>
            </geometry>       <!-- 0.001 -->
            
        </collision>
        <xacro:inertial_cylinder mass="0.03" radius="0.03325" length="0.0266">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="left_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>
    
   <!-- RIGHT WHEEL LINK -->

   <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 0.11 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.03325" length="0.0266"/>
            </geometry>       <!-- 0.001 -->
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03325" length="0.0266"/>
            </geometry>       <!-- 0.001 -->
            
        </collision>
        <xacro:inertial_cylinder mass="0.03" radius="0.03325" length="0.0266">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>
    <gazebo reference="right_wheel">
        <material>Gazebo/Blue</material>
    </gazebo>
  <!-- CASTER WHEEL LINK -->

    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="0.19 0 0"/>
    </joint>

    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.03325"/>
            </geometry>       <!-- 0.001 -->
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.03325"/>
            </geometry>       <!-- 0.001 -->
            
        </collision>
        <xacro:inertial_sphere mass="0.03" radius="0.03325">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_sphere>
    </link>
    <gazebo reference="caster_wheel">
        <material>Gazebo/Black</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

</robot>